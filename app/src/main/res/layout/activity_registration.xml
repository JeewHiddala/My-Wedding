        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.451" />

    <EditText
        android:id="@+id/et_wedName"
        android:layout_width="290dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
