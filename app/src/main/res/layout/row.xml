<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainRowLayout"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bgPalePink"
        android:padding="2dp">

        <ImageView
            android:id="@+id/completeTaskImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="24dp"
            android:paddingStart="2dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/done_icon" />


        <TextView
            android:id="@+id/txtTaskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="180dp"
            android:layout_marginBottom="10dp"
            android:text="task1 text"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/txtTaskCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="180dp"
            android:layout_marginBottom="5dp"
            android:text="task category"
            android:textAlignment="textStart"
            android:textColor="@color/navPink"
            android:textSize="18sp"
            android:visibility="invisible">
        </TextView>

        <TextView
            android:id="@+id/txtTaskStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="180dp"
            android:layout_marginBottom="2dp"
            android:text="task status"
            android:textAlignment="textStart"
            android:textColor="@color/fontPink"
            android:textSize="16sp">

        </TextView>

        <TextView
            android:id="@+id/txtTaskNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="5dp"
            android:text="text note"
            android:textSize="18sp"
            android:visibility="invisible">

        </TextView>

        <TextView
            android:id="@+id/txtTaskDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:text="date text"
            android:textAlignment="center"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/txtTaskID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="300dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:text="text id"
            android:textAlignment="center"
            android:textSize="18sp"
            android:visibility="invisible">

        </TextView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>

