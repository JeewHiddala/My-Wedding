<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgPalePink"
    android:foregroundTint="#FFFFFF"
    tools:context=".Home">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/navPink"
        android:divider="@drawable/welcomepage">


        <ImageButton
            android:id="@+id/settingBTN"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="150dp"
            android:layout_marginBottom="500dp"
            android:layout_weight="1"
            android:backgroundTint="@color/navPink"
            app:srcCompat="@drawable/icons8_gear_64" />

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="170dp"
            android:layout_marginLeft="-550dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:background="@color/navPink">

            <TextView
                android:id="@+id/wedDate1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="-180dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:text="Wedding Date : "
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/wedDate2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="-180dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:text=" 20/10/2020"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/countdown1"
                android:layout_width="483dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/navPink"
                android:text="00 : 00 : 00 : 00"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/dayhrms1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-225dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:text="Days : Hours : Mins : Secs"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginLeft="-50dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="-350dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/mywedding_logo" />

        <TextView
            android:id="@+id/brideName1"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="200dp"
            android:layout_weight="1"
            android:text="Bride and Groom"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="normal|bold|italic" />



    </LinearLayout>



    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="100dp"
        android:background="@color/bgPalePink"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.437"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/dashboardBtn1"
            android:layout_width="117dp"
            android:layout_height="match_parent"
            android:background="@color/bgPalePink"
            app:srcCompat="@drawable/icons8_prototype_80" />

        <TextView
            android:id="@+id/dashboard1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="-60dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:text="Dashboard"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="205dp"
        android:layout_height="140dp"
        android:background="@color/bgPalePink"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.688">

        <ImageButton
            android:id="@+id/taskBtn1"
            android:layout_width="55dp"
            android:layout_height="102dp"
            android:layout_weight="1"
            android:background="@color/bgPalePink"
            app:srcCompat="@drawable/icons8_survey_80" />

        <TextView
            android:id="@+id/task1"
            android:layout_width="21dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-190dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="-100dp"
            android:layout_weight="1"
            android:text="Tasks"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="205dp"
        android:layout_height="140dp"
        android:background="@color/bgPalePink"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.995"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.688">

        <ImageButton
            android:id="@+id/guestBtn1"
            android:layout_width="85dp"
            android:layout_height="102dp"
            android:layout_weight="1"
            android:background="@color/bgPalePink"
            app:srcCompat="@drawable/icons8_people_80" />

        <TextView
            android:id="@+id/guests1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="-200dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="-100dp"
            android:layout_weight="1"
            android:text="Guests"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="205dp"
        android:layout_height="140dp"
        android:background="@color/bgPalePink"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.993">

        <TextView
            android:id="@+id/budget1"
            android:layout_width="168dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="-200dp"
            android:layout_marginBottom="-100dp"
            android:layout_weight="1"
            android:text="Budget"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <ImageButton
            android:id="@+id/budgetBtn1"
            android:layout_width="184dp"
            android:layout_height="102dp"
            android:layout_weight="1"
            android:background="@color/bgPalePink"
            app:srcCompat="@drawable/icons8_debt_80" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="205dp"
        android:layout_height="140dp"
        android:background="@color/bgPalePink"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/vendors1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="-150dp"
            android:layout_marginBottom="-100dp"
            android:layout_weight="1"
            android:text="Vendors"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <ImageButton
            android:id="@+id/vendorsBtn1"
            android:layout_width="192dp"
            android:layout_height="102dp"
            android:layout_weight="1"
            android:background="@color/bgPalePink"
            app:srcCompat="@drawable/icons8_small_business_80" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>