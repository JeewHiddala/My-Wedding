<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mywedding">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EditTask"
            android:parentActivityName=".ViewTask"></activity>
        <activity
            android:name=".ViewTask"
            android:parentActivityName=".TaskList"/>
        <activity
            android:name=".AddTask"
            android:parentActivityName=".TaskList" />
        <activity
            android:name=".CompleteTask"
            android:parentActivityName=".TaskMenu" />
        <activity
            android:name=".TaskMenu"
            android:parentActivityName=".Home" />
        <activity
            android:name=".TaskList"
            android:parentActivityName=".TaskMenu" />
        <activity android:name=".Home" />
        <activity android:name=".ViewBudget" />
        <activity
            android:name=".EditBudget"
            android:parentActivityName=".ViewBudget" />
        <activity
            android:name=".AddBudget"
            android:parentActivityName=".BudgetList" />
        <activity
            android:name=".PaidList"
            android:parentActivityName=".BudgetMenu" />
        <activity
            android:name=".BudgetList"
            android:parentActivityName=".BudgetMenu" />
        <activity
            android:name=".BudgetMenu"
            android:parentActivityName=".Home" />
        <activity
            android:name=".Registration"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"> <!-- hides the action bar -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>